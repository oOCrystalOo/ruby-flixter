<br />
<div class="booyah-box col-10 offset-1 text-center">
    <h1><%= @course.title %></h1>
    <br />
    <%= link_to 'Preview as Student', course_path(@course), class: 'btn btn-warning' %>
    <br class="clr" />
    <br />
    <div>
      <%= link_to 'Add a New Section', new_instructor_course_section_path(@course), class: 'btn btn-primary btn-large' %>
    </div>
    <br />
    <ul>
      <% @course.sections.each do |section| %>
        <li>
          <%= section.title %>
        </li>
      <% end %>
    </ul>
</div>
