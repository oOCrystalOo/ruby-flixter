<br />
<div class="booyah-box col-10 offset-1 text-center">
    <h1><%= current_course.title %></h1>
    <% if current_course.image.present? %>
      <%= image_tag current_course.image.url, class: 'img-fluid' %>
    <% end %>
    <br />
    <%= link_to 'Preview as Student', course_path(current_course), class: 'btn btn-warning' %>
    <br class="clr" />
    <br />
    <div>
      <%= link_to 'Add a New Section', new_instructor_course_section_path(current_course), class: 'btn btn-primary btn-large' %>
    </div>
    <br />
    <ul class="sections">
      <% current_course.sections.rank(:row_order).each do |section| %>
        <li data-update_url="<%= instructor_section_path(section) %>" >
          <%= section.title %>
          <br />
          <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'btn btn-primary btn-sm' %>
          <br class="clr" />
          <ul class="lessons">
            <% section.lessons.rank(:row_order).each do |lesson| %>
              <li data-update_url="<%= instructor_lesson_path(lesson) %>">
                  <b><%= lesson.title %></b>
                  -
                  <%= lesson.subtitle %>
              </li>
            <% end %>
          </ul>
        </li>
      <% end %>
    </ul>
</div>

<script>
  $(function() {
    $('.lessons').sortable({
      update: function( event, ui ) {
        $.ajax({
          type: 'PUT',
          url: ui.item.data('update_url'),
          dataType: 'json',
          data: {
            lesson: {
              row_order_position: ui.item.index()
            }
          }
        });
      }
    });
    
    $('.sections').sortable({
      update: function( event, ui ) {
        $.ajax({
          type: 'PUT',
          url: ui.item.data('update_url'),
          dataType: 'json',
          data: {
            section: {
              row_order_position: ui.item.index()
            }
          }
        });
      }
    });
  });
</script>