<br/>

<div class="booyah-box col-10 offset-1">
  <h1>What I'm Learning</h1>
  <% if current_user.enrolled_courses.length > 0 %>
    <% current_user.enrolled_courses.each do |course| %>
      <h3 class='text-center'>
          <%= link_to course.title, course_path(course) %>
      </h3>
      <br />
      <% if course.image.present? %>
        <%= image_tag course.image.url, class: 'img-fluid' %>
      <% end %>
      <br />
      <div class='row'>
        <div class='col-12 col-sm-8'>
          <%= course.description %>
        </div>
        <div class='col-12 col-sm-4 text-center'>
          <%= link_to "More Info...", course_path(course), class: 'btn btn-lg btn-primary'  %>
        </div>
      </div>
      <hr class="col-8 offset-2">
      <br class="clr" />
    <% end %>
  <% else %>
    <h3>You are not enrolled in any courses.</h3>
  <% end %>
    
  <h1>What I'm Teaching</h1>
  <% if current_user.courses.length > 0 %>
    <% current_user.courses.each do |course| %>
      <h3 class="text-center">
        <%= link_to course.title, course_path(course) %>
      </h3>

      <% if course.image.present? %>
        <%= image_tag course.image.url, class: 'img-fluid' %>
      <% end %>
      <br />
      <div class='row'>
        <div class='col-12 col-sm-8'>
          <%= course.description %>
        </div>
        <div class='col-12 col-sm-4 text-center'>
          <%= link_to "More Info...", course_path(course), class: 'btn btn-lg btn-primary'  %>
        </div>
      </div>
      <hr class="col-8 offset-2">
      <br class="clr" />
    <% end %>
  <% else %>
    <h3>You are not teaching any courses.</h3>
  <% end %>
</div>